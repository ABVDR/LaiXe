@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-3">
            <img src="~/images/hutech_logo.png" alt="HUTECH logo"
                 class="img-fluid mb-2" style="height: 60px;" />
            <h4 class="fw-bold">Đăng nhập vào ProTest</h4>
        </div>

        <form onsubmit="login(event)">
            <div id="loginError" class="text-danger mb-3" style="display: none;"></div>

            <div class="mb-3">
                <label for="Username" class="form-label">Tên đăng nhập</label>
                <input id="Username" class="form-control" placeholder="Nhập tên đăng nhập" required />
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Mật khẩu</label>
                <input id="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>

        <hr class="my-4" />

        <button onclick="googleLogin()" class="btn btn-outline-danger w-100">
            <i class="bi bi-google me-2"></i> Đăng nhập bằng Google
        </button>
    </div>
</div>

<script>
    async function login(event) {
        event.preventDefault();

        const username = document.getElementById("Username").value;
        const password = document.getElementById("Password").value;

        const res = await fetch("/api/authenticate/login", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                username: username,
                password: password
            })
        });

        const data = await res.json();

        if (!data.status) {
            document.getElementById("loginError").style.display = "block";
            document.getElementById("loginError").innerText = data.message || "Đăng nhập thất bại!";
            return;
        }

        // ⭐ QUAN TRỌNG — LƯU TOKEN
        localStorage.setItem("jwtToken", data.token);

        // ⭐ KIỂM TRA LƯU TOKEN
        console.log("Lưu token:", localStorage.getItem("jwtToken"));

        // Chuyển trang sau khi login
            // window.location.href = "/Home/Index";
    console.log("STOP REDIRECT — TOKEN:", localStorage.getItem("jwtToken"));
    alert("Debug — Xem console!");

    }

    function googleLogin() {
        window.location.href = "/api/authenticate/google-login";
    }
</script>
